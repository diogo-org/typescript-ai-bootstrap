{
  "name": "@diogo-raphael-cravo/typescript-bootstrap",
  "version": "1.1.0",
  "description": "High-quality TypeScript project scaffolding with best practices for AI-assisted development",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "typescript-bootstrap": "./bin/cli.js"
  },
  "files": [
    "dist",
    "templates",
    "bin",
    ".github",
    ".husky",
    "eslint.config.js",
    "vitest.config.ts",
    "tsconfig.json",
    "src/test.setup.ts",
    ".gitignore"
  ],
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "prepare": "husky install"
  },
  "keywords": [
    "typescript",
    "scaffolding",
    "vite",
    "vitest",
    "eslint",
    "template",
    "boilerplate",
    "ai-development",
    "quality",
    "testing"
  ],
  "author": "diogo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/diogo-raphael-cravo/typescript-bootstrap.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "peerDependencies": {
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^4.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "jscpd": "^4.0.8",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
